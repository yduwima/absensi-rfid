{
    "name": "absensi-rfid/sistem-absensi",
    "description": "Sistem Absensi RFID berbasis CodeIgniter 3",
    "type": "project",
    "require": {
        "php": ">=7.2",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/"
        }
    },
    "config": {
        "vendor-dir": "vendor",
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo 'Libraries installed successfully!\\n';\""
        ]
    }
}
